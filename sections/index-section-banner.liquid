{% assign item = section.settings %}
<div class="container">
  <div class="banners">
    {% for block in section.blocks %}
      {% assign banner = block.settings %}
      <div class="banner">
        {% if banner.image %}
          <div class="banner__image overflow-hidden ratio ratio-{{ banner.ratio }}">{{ banner.image | image_url: width: 700 | image_tag: preload: true, class: "fit-image" }}</div>
        {% endif %}
        <div class="banner__content">
          {% if banner.title %}
            <div class="banner__title">{{ banner.title }}</div>
          {% endif %}
          {% if banner.subtitle %}
            <div class="banner__subtitle">{{ banner.subtitle }}</div>
          {% endif %}
          {% if banner.url %}
            <a class="banner__button" href="{{ banner.url }}">{{ banner.label }}</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Banner",
    "class": "index-section",
    "settings": [],
    "blocks": [
      {
        "type": "item",
        "name": "Banner",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen"
          },
          {
            "type": "select",
            "id": "ratio",
            "label": "Tamaño imagen",
            "options": [
              {
                "value": "3/4",
                "label": "3/4"
              }, {
                "value": "16/9",
                "label": "16/9"
              }
            ],
            "default": "3/4"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Título"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subtítulo"
          }, {
            "type": "header",
            "content": "Botón"
          }, {
            "type": "url",
            "id": "url",
            "label": "Enlace"
          }, {
            "type": "text",
            "id": "label",
            "label": "Etiqueta de botón"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Banner",
        "category": "Simple Section"
      }
    ]
  }
{% endschema %}