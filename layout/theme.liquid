<html>
  <head>
    {{ content_for_header }}
    <title>{{ shop.name }} - {{ page_title }}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>untitled</title>
    {{ 'theme.css' | asset_url | stylesheet_tag }}
  </head>

  <body class="body">
	<header class="header {% if settings.header_bg_transparent %}header-overlap{% endif %}">
		<div class="container-fluid">
			<div class="wrap flex items-center justify-between">
				<div class="navbar">
					{% include 'svg-menu' %}
					<ul class="nav flex items-center">
						{% for link in linklists.main-menu.links %}
							<li class="nav__item">
								<a href="{{ link.url }}">{{ link.title }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
				<h1>{{ shop.name }}</h1>
				<div class="extra-links">
					<div class="mini-cart relative">
						{% include 'svg-bag' %}
						<div class="mini-cart-content absolute">
							{% if cart.item_count == 0 %}
								Your cart is currently empty
							{% else %}
								{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}
								<span>-</span>
								Total: {{ cart.total_price | money_with_currency }}
								<span>-</span>
								<a href="/cart">View Cart</a>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>

	<main class="main">
		<div class="container">
			<div class="wrap">
				{{ content_for_layout }}
			</div>
		</div>
	</main>

  </body>
</html>