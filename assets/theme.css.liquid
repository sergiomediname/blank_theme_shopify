  height: 100%;
  object-fit: cover;
}

.offcanvas-switch::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.253);
}
